{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .search-container {
            margin: 20px 0;
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 8px;
        }
        .search-form {
            display: flex;
            gap: 15px;
            align-items: center;
        }
        .search-input {
            flex: 1;
            padding: 8px;
            border: 1px solid #ced4da;
            border-radius: 4px;
        }
        .filter-select {
            padding: 8px;
            border: 1px solid #ced4da;
            border-radius: 4px;
            background-color: white;
            min-width: 200px;
        }
        .badge {
            font-size: 0.85em;
            padding: 5px 10px;
        }
        .d-flex { display: flex; }
        .justify-content-between { justify-content: space-between; }
        .align-items-center { align-items: center; }
        .mb-3 { margin-bottom: 1rem; }

.btn {
    display: inline-block;
    padding: 0.5em 1.2em;
    border-radius: 5px;
    border: none;
    background: #2980b9;
    color: #fff;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    cursor: pointer;
    transition: background 0.2s;
    box-shadow: 0 2px 6px #0001;
}
.btn-primary {
    background: #2980b9;
}
.btn-primary:hover, .btn-primary:focus {
    background: #1c5d8c;
    color: #fff;
    text-decoration: none;
}
.btn i {
    margin-right: 0.5em;
}
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-3 text-center">
            <h1>Liste des utilisateurs</h1>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_register') }}" class="btn btn-primary">
                    <i class="fas fa-user-shield"></i> Cr√©ation d'un nouvel Admin / Staff
                </a>
            {% endif %}
        </div>

        {{ component('user_search') }}

        {# <a href="{{ path('app_users_new') }}" class="btn btn-success mt-3">
            <i class="fas fa-plus"></i> Ajouter un utilisateur
        </a> #}
    </div>
{% endblock %}
