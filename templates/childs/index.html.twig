{% extends 'base.html.twig' %}

{% block title %}Liste des enfants{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .search-container {
            margin: 20px 0;
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 8px;
        }
        .search-form {
            display: flex;
            gap: 15px;
            align-items: center;
        }
        .search-input {
            flex: 1;
            padding: 8px;
            border: 1px solid #ced4da;
            border-radius: 4px;
        }
        .filter-select {
            padding: 8px;
            border: 1px solid #ced4da;
            border-radius: 4px;
            background-color: white;
        }
    </style>
{% endblock %}

{% block body %}
    {# Affichage des messages flash #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="container">
        <h1>Liste des enfants</h1>

        {{ component('child_search') }}

        <a href="{{ path('app_childs_new') }}" class="btn btn-success mt-3">
            <i class="fas fa-plus"></i> Ajouter un enfant
        </a>
    </div>
{% endblock %}
