{% extends 'base.html.twig' %}

{% block title %}Nouvel enfant{% endblock %}

{% block body %}
    <div class="container">
        <h1>Inscription d'un nouvel enfant</h1>

        {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.nom) }}
                    {{ form_row(form.prenom) }}
                    {{ form_row(form.dateNaissance) }}
                    {{ form_row(form.genre) }}
                    {{ form_row(form.allergies) }}
                    {{ form_row(form.remarquesMedicales) }}
                    {{ form_row(form.revenus) }}
                   
                    {# {{ form_row(form.responsables) }} #}
                </div>
                
                <div class="col-md-6">
                    <h3>Planning hebdomadaire</h3>
                    {% for day in ['Lundi', 'Mardi', 'Mercredi', 'Jeudi', 'Vendredi'] %}
                        <div class="day-planning">
                            {{ form_row(form.planning[day ~ '_present']) }}
                            {{ form_row(form.planning[day ~ '_arrival']) }}
                            {{ form_row(form.planning[day ~ '_departure']) }}
                        </div>
                    {% endfor %}
                    
                    <div class="period">
                        {{ form_row(form.dateDebut) }}
                        {{ form_row(form.dateFin) }}
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Enregistrer</button>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .day-planning {
            border: 1px solid #ddd;
            padding: 15px;
            margin-bottom: 10px;
            border-radius: 5px;
        }
        .period {
            margin-top: 20px;
            padding: 15px;
            background: #f8f9fa;
            border-radius: 5px;
        }
    </style>
{% endblock %}