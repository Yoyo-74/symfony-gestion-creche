{% set name = name|default('__name__') %}

<div class="form-group">
    <label for="responsables_{{ name }}_nom">Nom</label>
    <input type="text" id="responsables_{{ name }}_nom" name="responsables[{{ name }}][nom]" class="form-control" required>
</div>

<div class="form-group">
    <label for="responsables_{{ name }}_prenom">Prénom</label>
    <input type="text" id="responsables_{{ name }}_prenom" name="responsables[{{ name }}][prenom]" class="form-control" required>
</div>

<div class="form-group">
    <label for="responsables_{{ name }}_email">Email</label>
    <input type="email" id="responsables_{{ name }}_email" name="responsables[{{ name }}][email]" class="form-control">
</div>

<div class="form-group">
    <label for="responsables_{{ name }}_tel">Téléphone</label>
    <input type="tel" id="responsables_{{ name }}_tel" name="responsables[{{ name }}][tel]" class="form-control">
</div>

<div class="form-group">
    <label for="responsables_{{ name }}_lien">Lien avec l'enfant</label>
    <select id="responsables_{{ name }}_lien" name="responsables[{{ name }}][lien]" class="form-control" required>
        <option value="">Sélectionnez un lien</option>
        <option value="père">Père</option>
        <option value="mère">Mère</option>
        <option value="famille">Famille</option>
        <option value="tuteur">Tuteur légal</option>
        <option value="grand-parent">Grand-parent</option>
        <option value="autre">Autre</option>
    </select>
</div> 