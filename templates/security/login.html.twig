{% extends 'base.html.twig' %}

{% block title %}Connexion - Gestion Crèche{% endblock %}

{% block body %}
<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h1 class="auth-title">Connexion</h1>
            <p class="auth-subtitle">Accédez à votre espace de gestion</p>
        </div>

        {% if error %}
            <div class="auth-alert error">
                <i class="fas fa-exclamation-circle"></i>
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        {% if app.user %}
            <div class="auth-alert success">
                <i class="fas fa-check-circle"></i>
                Vous êtes connecté en tant que {{ app.user.userIdentifier }}
                <a href="{{ path('app_logout') }}" class="btn btn-sm btn-secondary" style="margin-left: 1rem;">Se déconnecter</a>
            </div>
        {% else %}
            <form method="post" class="auth-form">
                <div class="form-group">
                    <label for="username">
                        <i class="fas fa-envelope"></i>
                        Adresse email
                    </label>
                    <input 
                        type="email" 
                        value="{{ last_username }}" 
                        name="_username" 
                        id="username" 
                        class="form-control" 
                        autocomplete="email" 
                        placeholder="votre.email@exemple.com"
                        required 
                        autofocus
                    >
                </div>

                <div class="form-group">
                    <label for="password">
                        <i class="fas fa-lock"></i>
                        Mot de passe
                    </label>
                    <input 
                        type="password" 
                        name="_password" 
                        id="password" 
                        class="form-control" 
                        autocomplete="current-password" 
                        placeholder="Votre mot de passe"
                        required
                    >
                </div>

                <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

                <div class="form-group">
                    <div class="checkbox-container">
                        <input type="checkbox" name="_remember_me" id="_remember_me">
                        <label for="_remember_me" class="checkbox-label">
                            Se souvenir de moi
                        </label>
                    </div>
                </div>

                <button class="auth-submit" type="submit">
                    <i class="fas fa-sign-in-alt"></i>
                    Se connecter
                </button>
            </form>

            <div class="auth-divider">
                <span>Besoin d'aide ?</span>
            </div>

            <div class="auth-links">
                <a href="#" onclick="alert('Contactez l\'administrateur pour récupérer votre mot de passe')">
                    <i class="fas fa-question-circle"></i>
                    Mot de passe oublié ?
                </a>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
